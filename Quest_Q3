        "import matplotlib.pyplot as plt\n",
        "import pandas as pd\n",
        "\n",
        "def calcular_consumo_y_viabilidad():\n",
        "    \"\"\"\n",
        "    Calcula el consumo de energía y analiza la viabilidad financiera de\n",
        "    instalar paneles solares.\n",
        "    \"\"\"\n",
        "\n",
        "    print(\"=== ANÁLISIS DE VIABILIDAD PARA INSTALACIÓN SOLAR ===\")\n",
        "\n",
        "    # --- Parte 1: Entrada de datos del usuario ---\n",
        "\n",
        "    try:\n",
        "        n = int(input(\"\\n¿Cuántos electrodomésticos tienes?: \"))\n",
        "        costo_kwh = float(input(\"Costo de la electricidad por kWh ($/kWh): \"))\n",
        "        costo_panel = float(input(\"Costo de un panel solar de 400 W ($): \"))\n",
        "        costo_instalacion = float(input(\"Costo adicional de instalación (inversor, etc.) ($): \"))\n",
        "    except ValueError:\n",
        "        print(\"Error: Por favor, ingrese un número válido.\")\n",
        "        return\n",
        "\n",
        "    electrodomesticos = []\n",
        "    total_kwh_dia = 0\n",
        "\n",
        "    for i in range(n):\n",
        "        nombre = input(f\"\\nNombre del electrodoméstico {i+1}: \")\n",
        "        potencia = float(input(\"Potencia en watts (W): \"))\n",
        "        horas = float(input(\"Horas de uso diario: \"))\n",
        "\n",
        "        # Consumo diario en kWh\n",
        "        consumo_dia = (potencia * horas) / 1000\n",
        "        electrodomesticos.append({'nombre': nombre, 'consumo': consumo_dia})\n",
        "        total_kwh_dia += consumo_dia\n",
        "\n",
        "    # --- Parte 2: Cálculos de energía y costo ---\n",
        "\n",
        "    total_kwh_mes = total_kwh_dia * 30\n",
        "    gasto_mensual_actual = total_kwh_mes * costo_kwh\n",
        "\n",
        "    energia_panel = 1.6  # kWh por día (valor de referencia para un panel de 400 W)\n",
        "    paneles_necesarios = total_kwh_dia / energia_panel\n",
        "\n",
        "    ahorro_mensual = (total_kwh_dia * costo_kwh) * 30\n",
        "    inversion_total = (paneles_necesarios * costo_panel) + costo_instalacion\n",
        "\n",
        "    # --- Parte 3: Resultados y análisis financiero ---\n",
        "\n",
        "    print(\"\\n--- RESULTADOS DEL ANÁLISIS ---\")\n",
        "\n",
        "    print(f\"\\nConsumo total diario: {total_kwh_dia:.2f} kWh\")\n",
        "    print(f\"Gasto mensual actual en electricidad: ${gasto_mensual_actual:.2f}\")\n",
        "\n",
        "    print(f\"\\nNúmero de paneles solares de 400 W necesarios: {paneles_necesarios:.1f}\")\n",
        "    print(f\"Costo de la inversión total: ${inversion_total:.2f}\")\n",
        "    print(f\"Ahorro mensual estimado con la instalación solar: ${ahorro_mensual:.2f}\")\n",
        "\n",
        "    # Cálculo del Retorno de la Inversión (ROI)\n",
        "    if ahorro_mensual > 0:\n",
        "        meses_roi = inversion_total / ahorro_mensual\n",
        "        print(f\"\\nSe estima que recuperarás tu inversión en: {meses_roi:.1f} meses\")\n",
        "    else:\n",
        "        print(\"\\nEl ahorro mensual es cero. No hay retorno de la inversión.\")\n",
        "\n",
        "    # --- Parte 4: Visualización de datos ---\n",
        "\n",
        "    df = pd.DataFrame(electrodomesticos)\n",
        "\n",
        "    # Gráfico de pastel del consumo\n",
        "    plt.figure(figsize=(8, 6))\n",
        "    plt.pie(df['consumo'], labels=df['nombre'], autopct='%1.1f%%', startangle=90)\n",
        "    plt.title('Consumo de energía por electrodoméstico')\n",
        "    plt.show()\n",
        "\n",
        "    # Gráfico de barras del ahorro acumulado y ROI\n",
        "    if ahorro_mensual > 0:\n",
        "        ahorro_anual = ahorro_mensual * 12\n",
        "        anios = range(1, 11)  # Proyección a 10 años\n",
        "        ahorro_acumulado = [ahorro_anual * a for a in anios]\n",
        "\n",
        "        plt.figure(figsize=(10, 6))\n",
        "        plt.bar(anios, ahorro_acumulado, color='skyblue')\n",
        "        plt.xlabel('Años')\n",
        "        plt.ylabel('Ahorro acumulado ($)')\n",
        "        plt.title('Proyección de Ahorro con Paneles Solares')\n",
        "        plt.grid(axis='y', linestyle='--')\n",
        "\n",
        "        # Marca el punto de ROI en el gráfico\n",
        "        if meses_roi <= 120:  # Si el ROI está dentro de los 10 años\n",
        "            plt.axvline(x=meses_roi / 12, color='red', linestyle='--', label=f'ROI: {meses_roi:.1f} meses')\n",
        "            plt.legend()\n",
        "\n",
        "        plt.show()\n",
        "\n",
        "# Ejecutar el programa\n",
        "calcular_consumo_y_viabilidad()"
      ]
    }
  ]
}